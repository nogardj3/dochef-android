<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="alertDialogTheme">@style/BaseTheme.AlertDialogStyle</item>
    </style>

    <style name="BaseTheme.TextInputLayout">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorHighlight">@color/grey</item>
    </style>

    <style name="BaseTheme.EditTextStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:textColorHighlight">@color/grey</item>
    </style>

    <style name="BaseTheme.EditTextStyle_post">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="BaseTheme.ProgressBarStyle">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BaseTheme.RatingBar">
        <item name="colorControlNormal">@color/grey_text</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BaseTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BaseTheme.SearchView">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#aaaaaa</item>
    </style>

    <style name="BaseTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>


    <style name="TextInputLayoutStyle.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>

        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/colorSecondary</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="TextInputLayoutStyle.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>

        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/colorSecondary</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HelperTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CounterTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
