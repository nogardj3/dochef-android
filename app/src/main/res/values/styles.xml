<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/grey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="alertDialogTheme">@style/BaseTheme.AlertDialogStyle</item>
    </style>

<!-- TODO -->
<!-- edittext color settings-->
    <style name="BaseTheme.EditTextStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/grey_text</item>
        <item name="android:textColorHighlight">@color/grey</item>
    </style>

    <style name="BaseTheme.EditTextStyle_post">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="BaseTheme.ProgressBarStyle">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BaseTheme.RatingBar">
        <item name="colorControlNormal">@color/grey_text</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="BaseTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="BaseTheme.SearchView">
        <!--bubble 색상-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--버튼 색상-->
        <item name="colorControlNormal">#aaaaaa</item>
    </style>

    <style name="BaseTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>

</resources>
