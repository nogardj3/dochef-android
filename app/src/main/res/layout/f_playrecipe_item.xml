<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/playrecipe_item_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="w,1:1.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1"
                tools:src="@raw/dummy_recipe_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/playrecipe_item_contents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:maxLines="4"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_img"
                tools:text="내용\n\n\n" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/playrecipe_item_contents"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintRight_toRightOf="@+id/playrecipe_item_contents" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/playrecipe_item_tipimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:tint="@color/colorSecondary"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_ingredient_text"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_contents"
                app:srcCompat="@drawable/ic_tip_black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/playrecipe_item_tiptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/playrecipe_item_tipimg"
                app:layout_constraintLeft_toRightOf="@+id/playrecipe_item_tipimg"
                app:layout_constraintTop_toTopOf="@+id/playrecipe_item_tipimg"
                android:text="팁" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/playrecipe_item_tips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexDirection="column"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintRight_toRightOf="@+id/playrecipe_item_contents"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_tipimg"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/playrecipe_item_tips"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintRight_toRightOf="@+id/playrecipe_item_contents" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/playrecipe_item_ingredient_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="재료"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_tips" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/playrecipe_item_ingredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:flexDirection="column"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintRight_toRightOf="@+id/playrecipe_item_contents"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_ingredient_text"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/playrecipe_end_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="playrecipe_end_divider,
            playrecipe_end_like, playrecipe_end_review_text, playrecipe_end_rating, playrecipe_end_review_edittext,playrecipe_end_review_ok "
                tools:visibility="visible" />

            <View
                android:id="@+id/playrecipe_end_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/grey"
                app:layout_constraintLeft_toLeftOf="@id/playrecipe_item_contents"
                app:layout_constraintRight_toRightOf="@id/playrecipe_item_contents"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_ingredients" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/playrecipe_end_review_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="리뷰"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_end_divider" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/playrecipe_end_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/playrecipe_item_contents"
                app:layout_constraintRight_toRightOf="@+id/playrecipe_item_contents"
                app:srcCompat="@drawable/ic_favorite_black" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/playrecipe_end_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:rating="5"
                android:theme="@style/BaseTheme.RatingBar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_end_review_text" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/playrecipe_end_review_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_stroke_2dp"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="4"
                android:theme="@style/BaseTheme.EditTextStyle"
                android:textSize="16dp"
                android:backgroundTint="@null"
                app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_contents"
                app:layout_constraintRight_toLeftOf="@+id/playrecipe_end_review_ok"
                app:layout_constraintTop_toBottomOf="@+id/playrecipe_end_rating" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/playrecipe_end_review_ok"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_commentedittextok"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:text="입력"
                android:textColor="@color/white"
                app:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/playrecipe_end_review_edittext"
                app:layout_constraintRight_toRightOf="@+id/playrecipe_item_contents"
                app:layout_constraintTop_toTopOf="@+id/playrecipe_end_review_edittext" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
