<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playrecipe_item_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_aspectRatio="150%"
        app:layout_widthPercent="100%"
        tools:src="@drawable/tempimg_playrecipe1" />

    <LinearLayout
        android:id="@+id/playrecipe_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playrecipe_item_img"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="재료"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/playrecipe_item_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="center"
            app:showDividerHorizontal="end" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playrecipe_item_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playrecipe_upper"
        android:maxLines="4"
        android:paddingStart="10dp"
        tools:text="contents\n\n\n" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playrecipe_item_explain"
        android:layout_marginStart="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorSecondary"
            app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/playrecipe_item_tiptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="팁" />

    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>
