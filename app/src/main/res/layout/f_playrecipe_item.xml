<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playrecipe_item_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="w,1:1.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        tools:src="@raw/dummy_recipe_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playrecipe_item_ingredient_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="재료"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_img" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/playrecipe_item_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_ingredient_text"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_ingredient_text"
        app:showDividerHorizontal="end" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playrecipe_item_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:maxLines="4"
        app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_ingredient_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_ingredients"
        tools:text="내용\n\n\n" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playrecipe_item_tipimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorSecondary"
        app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_ingredient_text"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_explain"
        app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playrecipe_item_tiptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="팁"
        app:layout_constraintBottom_toBottomOf="@+id/playrecipe_item_tipimg"
        app:layout_constraintLeft_toRightOf="@+id/playrecipe_item_tipimg"
        app:layout_constraintTop_toTopOf="@+id/playrecipe_item_tipimg" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/playrecipe_end_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="playrecipe_end_tags, playrecipe_end_divider,
            playrecipe_end_like, playrecipe_end_addmyrecipe, playrecipe_end_share,
            playrecipe_end_review"
        tools:visibility="gone"
        />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/playrecipe_end_tags"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        app:flexWrap="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/playrecipe_item_explain"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_item_tipimg" />

    <View
        android:id="@+id/playrecipe_end_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_end_tags" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playrecipe_end_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/playrecipe_end_review"
        app:layout_constraintRight_toLeftOf="@+id/playrecipe_end_addmyrecipe"
        app:layout_constraintTop_toTopOf="@+id/playrecipe_end_review"
        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playrecipe_end_addmyrecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/playrecipe_end_review"
        app:layout_constraintRight_toLeftOf="@+id/playrecipe_end_share"
        app:layout_constraintTop_toTopOf="@+id/playrecipe_end_review"
        app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/playrecipe_end_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/playrecipe_end_review"
        app:layout_constraintRight_toLeftOf="@+id/playrecipe_end_review"
        app:layout_constraintTop_toTopOf="@+id/playrecipe_end_review"
        app:srcCompat="@drawable/ic_share_black_24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/playrecipe_end_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="리뷰"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playrecipe_end_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>
