<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/reviewwrite_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/BaseTheme.Toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="작성하기">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reviewwrite_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:text="완료"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/reviewwrite_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/reviewwrite_reviewimg_add"
        app:layout_constraintTop_toBottomOf="@+id/reviewwrite_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reviewwrite_reviewimg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:overScrollMode="never"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="w,1:1.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/reviewwrite_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reviewwrite_reviewimg"
                android:layout_centerHorizontal="true"
                android:isIndicator="false"
                android:max="6"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1.0"
                android:theme="@style/BaseTheme.RatingBar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewwrite_reviewimg" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/reviewwrite_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/reviewwrite_rating"
                android:background="@null"
                android:gravity="top"
                android:hint="입력해 보세요"
                android:maxLines="4"
                android:theme="@style/BaseTheme.EditTextStyle"
                app:layout_constraintTop_toBottomOf="@+id/reviewwrite_rating" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/reviewwrite_reviewimg_add"
        app:layout_constraintTop_toTopOf="@+id/reviewwrite_reviewimg_add" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reviewwrite_reviewimg_add"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:tint="@color/grey_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewwrite_scroll"
        app:srcCompat="@drawable/ic_image_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>