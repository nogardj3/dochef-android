<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/playrecipe_start_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/background_translucent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/playrecipe_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_marginTopPercent="20%"
        tools:text="title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/playrecipe_start_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playrecipe_start_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        tools:text="contents\n\n\n" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/playrecipe_start_ingredienttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playrecipe_start_explain"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="모든 재료"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/playrecipe_start_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playrecipe_start_ingredienttext"
        android:layout_marginBottom="5dp"
        app:flexDirection="column" />

    <LinearLayout
        android:layout_below="@+id/playrecipe_start_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
            android:tint="@color/colorSecondary" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="팁"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
