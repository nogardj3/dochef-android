<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="2dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recipehome_recipeimg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1"
        tools:src="@raw/dummy_recipe_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recipehome_new"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_new" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recipehome_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/bg_round2"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/recipehome_recipeimg"
        app:layout_constraintRight_toRightOf="@+id/recipehome_recipeimg"
        app:srcCompat="@drawable/splash_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
