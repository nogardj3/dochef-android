<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/li_comment_brief_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:maxEms="5"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/li_comment_brief_contents"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="닉네임" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/li_comment_brief_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@+id/li_comment_brief_nickname"
        app:layout_constraintRight_toLeftOf="@+id/li_comment_brief_date"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="내용" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/li_comment_brief_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="date" />

</androidx.constraintlayout.widget.ConstraintLayout>
