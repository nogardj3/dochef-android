<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recipemain_recipeimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@raw/dummy_recipe_1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recipemain_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipemain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/recipemain_nickname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="레시피" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipemain_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="닉네임" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/recipemain_other_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="recipemain_date_text,recipemain_viewscountimage,recipemain_viewscount,recipemain_new"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipemain_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="1일 전" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recipemain_viewscountimage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/recipemain_date_text"
            app:layout_constraintRight_toLeftOf="@+id/recipemain_viewscount"
            app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipemain_viewscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="@+id/recipemain_date_text"
            app:layout_constraintTop_toTopOf="@+id/recipemain_viewscountimage"
            app:layout_constraintBottom_toBottomOf="@+id/recipemain_viewscountimage"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recipemain_new"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_new" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>