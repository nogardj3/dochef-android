<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/playrecipe_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/playrecipe_circular_tools_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="playrecipe_podslider, playrecipe_circular_timer, playrecipe_circular_timer_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playrecipe_circular_timer_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/bg_round2"
        app:layout_constraintBottom_toBottomOf="@+id/playrecipe_circular_timer"
        app:layout_constraintLeft_toLeftOf="@+id/playrecipe_circular_timer"
        app:layout_constraintRight_toRightOf="@+id/playrecipe_circular_timer"
        app:layout_constraintTop_toTopOf="@+id/playrecipe_circular_timer"
        tools:text="05:00" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/playrecipe_circular_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        app:indicatorDirectionCircular="clockwise"
        app:indicatorSize="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:trackColor="@color/colorSecondary"
        app:indicatorColor="@color/grey"
        app:trackThickness="8dp"/>

    <com.layer_net.stepindicator.StepIndicator
        android:id="@+id/playrecipe_podslider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:siBackgroundColor="@color/colorSecondary"
        app:siStepColor="@color/colorSecondary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playrecipe_tts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
