<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/comment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/BaseTheme.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="댓글 보기" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/footer_comment_edittext"
        app:layout_constraintTop_toBottomOf="@+id/comment_toolbar"
        tools:listitem="@layout/li_comment" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footer_comment_edittext" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/footer_comment_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/footer_comment_clear"
        android:background="@color/white"
        android:hint="댓글을 입력해 주세요"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:overScrollMode="always"
        android:padding="5dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:theme="@style/BaseTheme.EditTextStyle"
        app:layout_constraintBottom_toBottomOf="@+id/footer_comment_ok"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/footer_comment_clear"
        app:layout_constraintTop_toTopOf="@+id/footer_comment_ok" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/footer_comment_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:tint="@color/grey_text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/footer_comment_ok"
        app:layout_constraintRight_toLeftOf="@+id/footer_comment_ok"
        app:layout_constraintTop_toTopOf="@+id/footer_comment_ok"
        app:srcCompat="@drawable/ic_cancel_black_24dp"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/footer_comment_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/background_commentedittextok"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="입력"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
