<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tempimg_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/background_translucent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:tint="@color/white"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/splash_logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.28"
        app:srcCompat="@drawable/splash_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/splash_logo"
        android:layout_toEndOf="@+id/splash_logo"
        android:alpha="0"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/splash_logo"
        app:layout_constraintLeft_toRightOf="@+id/splash_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/splash_logo2"
        tools:aplha="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
