<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_root"

    android:background="@drawable/tempimg_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/background_translucent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tint="@color/white"
        app:layout_aspectRatio="100%"
        app:layout_marginStartPercent="25%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="28%"
        app:srcCompat="@drawable/splash_logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_logo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/splash_logo"
        android:layout_toEndOf="@+id/splash_logo"
        android:alpha="0"
        android:tint="@color/white"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="28%"
        app:srcCompat="@drawable/splash_logo2" />


</androidx.percentlayout.widget.PercentRelativeLayout>
