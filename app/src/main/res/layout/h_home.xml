<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_userimg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round"
        app:srcCompat="@drawable/ic_default_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_userimg_revise"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_round2"
        android:padding="5dp"
        android:tint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/home_userimg"
        app:layout_constraintRight_toRightOf="@+id/home_userimg"
        app:srcCompat="@drawable/ic_build_black_24dp"
        tools:visibility="visible" />


    <LinearLayout
        android:id="@+id/home_recipelayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/home_userimg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_recipecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레시피"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_followerlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/home_recipelayout"
        app:layout_constraintTop_toTopOf="@+id/home_recipelayout"
        app:layout_constraintWidth_percent="0.2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_followercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로워"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_followinglayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/home_followerlayout"
        app:layout_constraintTop_toTopOf="@+id/home_recipelayout"
        app:layout_constraintWidth_percent="0.2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/home_followingcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로잉"
            android:textColor="@color/black" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="프로필 수정"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/home_recipelayout"
        app:layout_constraintRight_toRightOf="@+id/home_followinglayout"
        app:layout_constraintTop_toBottomOf="@+id/home_recipelayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/home_nickname" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/home_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_button"
        tools:text="닉네임" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_nickname_revise"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_round2"
        android:padding="5dp"
        android:tint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/home_nickname"
        app:layout_constraintLeft_toRightOf="@+id/home_nickname"
        app:layout_constraintTop_toTopOf="@+id/home_nickname"
        app:srcCompat="@drawable/ic_build_black_24dp"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/home_profiletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/grey"
        android:gravity="start"
        android:lines="4"
        android:maxLines="4"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/home_nickname_revise"
        tools:text="프로필" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_profiletext_revise"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_round2"
        android:padding="5dp"
        android:tint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/home_profiletext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_profiletext"
        app:srcCompat="@drawable/ic_build_black_24dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
