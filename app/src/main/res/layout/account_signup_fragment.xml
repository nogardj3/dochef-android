<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/account_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/account_signup_email"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:srcCompat="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/account_signup_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:theme="@style/BaseTheme.EditTextStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_logo"
        app:layout_constraintWidth_percent="0.69" />

    <View
        android:id="@+id/account_signup_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/account_signup_email"
        app:layout_constraintRight_toRightOf="@+id/account_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/account_signup_email" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/account_signup_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:theme="@style/BaseTheme.EditTextStyle"
        app:layout_constraintLeft_toLeftOf="@+id/account_signup_email"
        app:layout_constraintRight_toRightOf="@+id/account_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/account_signup_divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/account_signup_notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="사용하실 이메일과 비밀번호를 입력해 주세요"
        android:textColor="@color/grey_text"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/account_signup_email"
        app:layout_constraintRight_toRightOf="@+id/account_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/account_signup_password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/account_signup_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:text="회원 가입"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintDimensionRatio="w,1:4.15"
        app:layout_constraintLeft_toLeftOf="@+id/account_signup_email"
        app:layout_constraintRight_toRightOf="@+id/account_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/account_signup_notice" />

</androidx.constraintlayout.widget.ConstraintLayout>