<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recipetheme_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@raw/dummy_recipe_1" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#77ffffff"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipetheme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recipetheme_nickname"
            tools:text="레시피" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipetheme_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="닉네임" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/recipetheme_rating_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/recipetheme_rating"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_star_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recipetheme_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowRadius="1.5"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/recipetheme_rating_img"
            app:layout_constraintBottom_toBottomOf="@+id/recipetheme_rating_img"
            app:layout_constraintLeft_toRightOf="@+id/recipetheme_rating_img"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="4.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>