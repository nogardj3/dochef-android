<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/reciperecommend_toolbar"
            style="@style/BaseTheme.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/BaseTheme.Toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:title="추천" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciperecommend_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reciperecommend_toolbar"
            app:spanCount="2"
            tools:listitem="@layout/reciperecommend_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reciperecommend_empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="레시피가 없습니다."
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reciperecommend_toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>