<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackground">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/li_recipegrid_recipeimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/li_recipegrid_layout1"
            tools:src="@drawable/tempimg_recipe1" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/li_recipegrid_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:padding="6dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/li_recipegrid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:text="recipetitle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/li_recipegrid_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li_recipegrid_title"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                tools:text="nickname" />

        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>