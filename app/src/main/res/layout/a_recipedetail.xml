<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/recipedetail_recipeimgs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_aspectRatio="150%"
            app:layout_widthPercent="100%" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/recipedetail_recipeimgs_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/recipedetail_recipeimgs"
            android:layout_alignBottom="@+id/recipedetail_recipeimgs"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipedetail_recipeimgs"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recipedetail_recipetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="recipetitle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="18dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/recipedetail_userimg"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_round"
                        tools:src="@drawable/ic_person_black_24dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/recipedetail_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        tools:text="nickname" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recipedetail_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="16sp"
                    tools:text="contents" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/recipedetail_tags"
                    android:layout_width="match_parent"
                    android:layout_height="36sp"
                    android:layout_marginBottom="4dp"
                    app:flexWrap="wrap" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="좋아요" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/recipedetail_likecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        tools:text="0" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="조회수" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/recipedetail_viewcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        tools:text="0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/recipedetail_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/recipedetail_addmyrecipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/recipedetail_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_share_black_24dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/recipedetail_startrecipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시작하기"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/colorPrimary" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="4dp"
                    android:text="재료"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/recipedetail_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:flexDirection="column" />
            </LinearLayout>

            <androidx.percentlayout.widget.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recipedetail_review_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="리뷰"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/recipedetail_review_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipedetail_review_text"
                    android:layout_centerHorizontal="true"
                    android:isIndicator="true"
                    android:max="6"
                    android:numStars="5"
                    android:rating="4"
                    android:theme="@style/BaseTheme.RatingBar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recipedetail_review_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipedetail_review_rating"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_round2"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="4.6" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipedetail_review_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipedetail_review_rating_text"
                    android:layout_marginBottom="5dp"
                    android:overScrollMode="never" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recipedetail_review_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipedetail_review_recycler"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:padding="2dp"
                    android:text="더보기"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
            </androidx.percentlayout.widget.PercentRelativeLayout>

        </LinearLayout>
    </androidx.percentlayout.widget.PercentRelativeLayout>
</ScrollView>