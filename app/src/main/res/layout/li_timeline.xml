<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp">


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/timeline_postimg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="100%"
            tools:src="@drawable/tempimg_post1" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/timeline_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeline_postimg">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/timeline_userimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/background_round"
                tools:src="@drawable/ic_person_black_24dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/timeline_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/timeline_userimg"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="nickname" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timeline_user_layout"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/timeline_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:maxLines="4"
                android:textSize="16sp"
                tools:text="contents\ncontents\ncontents\ncontents" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/timeline_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeline_contents" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/timeline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/timeline_tags"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                tools:text="time" />

            <LinearLayout
                android:id="@+id/timeline_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeline_time"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋아요" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/timeline_likecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    tools:text="0" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="댓글" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/timeline_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/timeline_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/timeline_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/ic_comment_black_24dp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/timeline_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_more_horiz_black_24dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeline_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeline_layout2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/timeline_commentdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="column" />
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>