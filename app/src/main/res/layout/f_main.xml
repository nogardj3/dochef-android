<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_adviewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:overScrollMode="never"
        app:layout_aspectRatio="200%"
        app:layout_widthPercent="100%" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/main_adviewpager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_adviewpager"
        android:layout_alignBottom="@+id/main_adviewpager"
        android:padding="10dp" />

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_adviewpager"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/main_recommend_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="인기 급상승 레시피"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/main_recommend_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:text="더보기"
                android:textColor="@color/grey_text" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recommend_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/main_recommend_layout1"
            android:overScrollMode="never" />

    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>
