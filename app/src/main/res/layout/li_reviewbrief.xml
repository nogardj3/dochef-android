<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_stroke_2dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="2dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reviewbrief_recipeimg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/tempimg_recipe1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reviewbrief_userimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_round"
        app:layout_constraintLeft_toRightOf="@+id/reviewbrief_recipeimg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewbrief_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:maxEms="5"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/reviewbrief_userimg"
        app:layout_constraintLeft_toRightOf="@+id/reviewbrief_userimg"
        app:layout_constraintTop_toTopOf="@+id/reviewbrief_userimg"
        tools:text="닉네임" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewbrief_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1일 전" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/reviewbrief_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:theme="@style/BaseTheme.RatingBar"
        app:layout_constraintLeft_toLeftOf="@+id/reviewbrief_userimg"
        app:layout_constraintTop_toBottomOf="@+id/reviewbrief_userimg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reviewbrief_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/reviewbrief_userimg"
        app:layout_constraintTop_toBottomOf="@+id/reviewbrief_rating"
        tools:text="내용" />

</androidx.constraintlayout.widget.ConstraintLayout>