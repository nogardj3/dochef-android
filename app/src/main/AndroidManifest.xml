<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yhjoo.dochef">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.yhjoo.dochef.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">

        <activity
            android:name="com.yhjoo.dochef.activities.CommentActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.yhjoo.dochef.activities.FindPWActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.yhjoo.dochef.activities.FollowerListActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.yhjoo.dochef.activities.FollowingListActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.yhjoo.dochef.activities.HelpActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.yhjoo.dochef.activities.SigninActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.yhjoo.dochef.activities.MainActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.yhjoo.dochef.activities.MakeRecipeActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.yhjoo.dochef.activities.MyHomeActivity"
