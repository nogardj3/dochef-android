            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.yhjoo.dochef.activities.RevisePostActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.yhjoo.dochef.activities.ReviseRecipeActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.yhjoo.dochef.activities.SearchActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustResize" />

