        <activity
            android:name="com.yhjoo.dochef.activities.MyRecipeActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.yhjoo.dochef.activities.NoticeActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name="com.yhjoo.dochef.activities.NotificationActivity"
            android:theme="@style/BaseTheme"
            android:windowSoftInputMode="adjustNothing" />

